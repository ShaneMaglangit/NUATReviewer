<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="resultViewModel"
            type="com.shanemaglangit.nuatreviewer.ui.result.ResultViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.result.ResultFragment">

        <ImageView
            android:id="@+id/image_congratulate"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:src="@drawable/congratulation"
            app:layout_constraintBottom_toTopOf="@+id/text_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/text_result"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor"
            android:textSize="64sp"
            android:textStyle="normal"
            android:text="@{Integer.toString(resultViewModel.correctAnswers)}"
            app:layout_constraintBottom_toTopOf="@+id/text_result_sub"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_congratulate"
            tools:text="25" />

        <TextView
            android:id="@+id/text_result_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp"
            app:resultSub="@{resultViewModel.totalQuestion}"
            app:layout_constraintBottom_toTopOf="@+id/button_return"
            app:layout_constraintEnd_toEndOf="@+id/text_result"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/text_result"
            app:layout_constraintTop_toBottomOf="@+id/text_result" />

        <Button
            android:id="@+id/button_return"
            style="@style/AppTheme.Button.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Return"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_result_sub" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>